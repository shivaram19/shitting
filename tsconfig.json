{
    "compilerOptions": {
      "target": "es6",
      "module": "commonJS",
      "esModuleInterop": true,
      "strict": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "sourceMap": true,
      "outDir": "./dist",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true
    },
    "include": ["src/*/"],
    "exclude": ["node_modules", "dist"]
  }